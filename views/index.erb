<!DOCTYPE html>
<html>
    <head>
        <title><%= @title %></title>
        <meta charset=utf-8 />
        <link href="css/bootstrap.css" rel="stylesheet">
    </head>
    <body>
        <h1><%= @title %></h1>

        <br>

        <div class="container">
        <table class="table table-striped table-bordered table-condensed">
          <thead>
            <tr>
              <th>順位</th>
              <th>ユーザーID</th>
              <th>スコア</th>
            </tr>
          </thead>

          <tbody>
            <% @scores.each do |score| %>
              <tr>
                <td><%= score[:rank] %></td>
                <td><%= score[:user_id] %></td>
                <td><%= score[:score] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>

        <script src="http://code.jquery.com/jquery.js"></script>
        <script src="js/bootstrap.min.js"></script>
    </body>
</html>
